@if (ViewBag.Login == null)
{
 
        <section class="banner">

            <article class="container-grid equipes-flex container-grid-d">

                <div class="border-gradient-e">

                    <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" class="box-equipes">

                        <h1>Acesso Negado</h1>

                        <h1>Por favor, realize o login para ter acesso a essa página.</h1>

                    </form>

                </div>
            </article>

        </section>
    
}
else{


        <section class="banner">

            <article class="container-grid equipes-flex container-grid-d">

                <div class="border-gradient-e">

                    <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" class="box-equipes">
                        <h1>Cadastro de equipes</h1>
                        <hr>

                        <div class="input-gradient-equipes">
                            <input type="text" placeholder="Digite o nome da sua equipe..." name ="Nome" required>
                        </div>

                            <div class="image-equipe">
                                <label for="input-file"></label>
                                 <input id = "input-file" name="Imagem" type="file" accept="image/png, image/jpeg">
                                 </input>

                            </div>
                        
                        <button class="cadastro" type="submit">Cadastro</button>

                    </form>

                </div>
            </article>


           
            <article class="container-grid">
                <table>
                    <thead>

                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>    Equipe</th>
                            <th></th>
                            <th>Ações</th>
                            <th></th>
                            
                        </tr>

                    </thead>

                    <tbody>
                        

    @foreach (Equipe equipe in ViewBag.Equipe)
           {
        <tr class ="table-line">
            <td class = "number">@equipe.IdEquipe</td>
            <td>@equipe.Nome</td>
            <td>
                <img src="/img/Equipes/@equipe.Imagem" width="50px">           
            </td>
            <td class="icon-trash" >
                <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe" style="text-decoration: none;"><img src="~/assets/icons/icon-trash.svg" alt=""></a>
            </td>
            <td><a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe" style="text-decoration: none;"> <img src="~/assets/icons/edit.svg" id="edit" alt=""> </a></td>

        </tr>
           }

                       
                    </tbody>

                </table>
            </article>

        </section>
}

